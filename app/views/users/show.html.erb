<%= render 'layouts/nav', user: @user %>
<div class="body">
  <div class=container>
    <%= flash[:sign_in] %>
    <%= flash[:update] %>
    <div class="row">
      <%= render 'layouts/profile', user: @book_user, book: @book %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,  fallback: "no_image.jpg"%>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
                <td colspan="3"></td>
              </tr>
            <% end %>
            <%= paginate @books, class: "paginate" %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>


