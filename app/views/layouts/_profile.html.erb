<div class="col-xs-3">
  <h2>User info</h2>
  <div class="form-group has-icon">
      <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
      </div>
      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>

  </div>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(user.id) do %>
      <p class= "col-xs-12 btn btn-default glyphicon glyphicon-wrench "></p>
    <% end %>
  </div>


  <h2>New book</h2>
  <% if book.errors.any? %>
    <ul>
      <% book.errors.full_messages.each do |msg| %>
        <li>error</li>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: book, url: user_registration_path do |f| %>
    <div class="field row">
      <h4>Title</h4>
      <div class="col-xs-12 book_title">
        <%= f.text_field :title %>
      </div>
      </div>
      <div class="field row">
       <h4>Body</h4>
      <div class="col-xs-12 book_body">
        <%= f.text_area :body %>
      </div>
    </div>
    <div>
      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>