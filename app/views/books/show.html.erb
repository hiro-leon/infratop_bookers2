<%= render 'layouts/nav', user: @user %>
<div class="body">
  <div class=container>
    <%= flash[:create] %>
    <%= flash[:update] %>
    <div class="row">
      <%= render 'layouts/profile', user: @book_user, book: @newbook %>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td></td>
                <td>
                  <%= link_to user_path(@book_user.id) do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                    <%= @book_user.name %>
                  <% end %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
            　　 <% if @book.user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(@book) %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか?"} %></td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>